@model MainViewViewModel

<div class="modal fade" id="OuCreate" role="dialog" aria-labelledby="OuCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" role="document">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold" id="OuCreateLabel">@Localizer["NewFolderName"].Value</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form">
                    <form class="needs-validation" id="needs-validation" asp-controller="Home" asp-action="CreateOU" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#main" novalidate>
                        <div class="form-group row">
                            <div class="col-10">
                                <input id="NewName" type="text" name="NewName" value="" class="form-control validate" pattern='^[^/[\]:;|=+*?<>,"\\]*$' required/>
                                <input type="hidden" name="SelectedPath" value="@Model.SelectedPath" />
                                <div class="invalid-tooltip">
                                    @Localizer["InvalidCharacters"]
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary col-2">@HADES.Strings.OK</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
