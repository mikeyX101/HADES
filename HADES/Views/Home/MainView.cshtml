@model MainViewViewModel

@section scripts
{
    <link rel="stylesheet" href="~/lib/bootstrap-treeview/css/bootstrap-treeview.css">
    <script type="text/javascript" src="~/lib/bootstrap-treeview/js/bootstrap-treeview.js"></script>
    <script type="text/javascript" src="~/js/treeview.js"></script>
    <script type="text/javascript">showTreeView(@Html.Raw(Model.ADRootTreeNodeJson));</script>
}

<div class="row">

    @* Left Nav *@
    <div class="col-sm-4">
        <h3 class="mt-3">Dossier et groupes</h3>
        <div id="leftnav">
            @await Html.PartialAsync("_LeftNav", Model)
        </div>
    </div>

    @* Right Nav *@
    <div class="col-sm-8">
        <h3 class="mt-3">Contenu des dossiers et des groupes</h3>
        <button type="button" class="btn btn-outline-secondary">
            @Html.ActionLink(Localizer["CreateNew"].Value, "Create")
        </button>
        <div id="content">
            @await Html.PartialAsync("_Content", Model)
        </div>
    </div>

</div>

