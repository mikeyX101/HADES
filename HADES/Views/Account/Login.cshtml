@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_LayoutLogin";
}
@{ HADES.Data.ApplicationDbContext tempdb = new(); }
<link rel="stylesheet" href="~/css/loginLight.css" />

<!-- Main Content -->
<div class="container-fluid">
    <div class="row main-content bg-success text-center">
        <div class="col-md-4 text-center company__info">
            <h4 class="company_title"><img src="@tempdb.AppConfig.FirstOrDefault().CompanyLogoFile" alt="*LOGO*" height="90" onerror="this.onerror = null; this.src = '/img/HADESICO.png';" /></h4>
        </div>
        <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
            <div class="container-fluid">
                <div class="row title">
                    <h1><B>H</B>elpful <B>A</B>ctive <B>D</B>irectory <B>E</B>xternal <B>S</B>ystem</h1>
                </div>
                <div class="row">
                    <h4>@Localizer["Login"]</h4>
                </div>
                <div class="row">
                    <form method="post" asp-action="LogIn" class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <input type="text" asp-for="Username" class="form__input" placeholder=@Localizer["Username"]>
                        </div>
                        <div class="col">
                            <span asp-validation-for="Username"
                                  class="text-danger"></span>
                        </div>
                        <div class="row">
                            <!-- <span class="fa fa-lock"></span> -->
                            <input type="password" asp-for="Password" class="form__input" placeholder=@Localizer["Password"]>
                        </div>
                        <div class="col">
                            <span asp-validation-for="Password"
                                  class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="submit" name="" value=@Localizer["Login"] class="btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

