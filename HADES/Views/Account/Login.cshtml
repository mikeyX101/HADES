@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_LayoutLogin";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="container center-screen-absolute">
    <div class="col text-center align-items-center">
        <h2>@Localizer["Login"]</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="LogIn">
            <div class="form-group row">
                <div class="col-md-2"><label>@Localizer["Username"]</label></div>
                <div class="col-md-6">
                    <input type="text" asp-for="Username"
                           class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Username"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"><label>@Localizer["Password"]</label></div>
                <div class="col-md-6">
                    <input type="password" asp-for="Password"
                           class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Password"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
                </div>
            </div>
        </form>
    </div>
</div>