@model AppConfigViewModel
@{
    ViewBag.Title = Localizer["AppConfigTitle"];
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/minimum-age.js"></script>
}

<div class="bg-primary text-white text-center">
    <h1 class="m-3 p-3">@Localizer["ParametreApplication"]</h1>
</div>

<form asp-action="AppConfig" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="@Model.ActiveDirectory.Id" />
        <div class="col-sm-2"><label>@Localizer["RootOu"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.RootOu" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["PortNumber"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.PortNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["ServerAddress"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.ServerAddress" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["ConnectionFilter"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.ConnectionFilter" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["BaseDN"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.BaseDN" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["AccountDN"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.AccountDN" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["PasswordDN"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.PasswordDN" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["SyncField"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.ActiveDirectory.SyncField" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="@Model.DefaultUser.Id" />
        <input type="hidden" asp-for="@Model.DefaultUser.UserConfigId" />
        <input type="hidden" asp-for="@Model.DefaultUser.RoleId" />
        <div class="col-sm-2"><label>@Localizer["DefaultUser"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.DefaultUser.UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["DefaultUserPassword"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.DefaultUser.Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <input type="hidden" asp-for="@Model.AppConfig.Id" />
        <div class="col-sm-2"><label>@Localizer["CompanyLogoFile"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.CompanyLogoFile" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["CompanyName"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.CompanyName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["CompanyBackgroundFile"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.CompanyBackgroundFile" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["DefaultLanguage"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.DefaultLanguage" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["SMTP"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.SMTP" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["LogDeleteFrequency"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.LogDeleteFrequency" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["LogMaxFileSize"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.LogMaxFileSize" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["LogTotalMaxSize"]</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.AppConfig.LogTotalMaxSize" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["AdminGroup"]</label></div>
        <div class="col-sm-4">
            @*<input type="text" asp-for="@Model.AdminGroup" class="form-control" />*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>@Localizer["SuperAdminGroup"]</label></div>
        <div class="col-sm-4">
            @*<input type="text" asp-for="@Model.SuperAdminGroup" class="form-control" />*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
        </div>
    </div>
</form>