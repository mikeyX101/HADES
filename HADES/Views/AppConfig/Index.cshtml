    </div>
    <div class="form-group row">
        <div class="col-sm-3 col-lg-3 offset-lg-2"><label>@Localizer["LogMaxFileSize"]</label></div>
        <div class="col-sm-9 col-lg-5">
            <input type="text" asp-for="@Model.LogMaxFileSize" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3 col-lg-3 offset-lg-2"><label>@Localizer["LogTotalMaxSize"]</label></div>
        <div class="col-sm-9 col-lg-5">
            <input type="text" asp-for="@Model.LogTotalMaxSize" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="offset-10 offset-lg-9">
            <button type="submit" class="btn btn-primary btn-lg">@Localizer["Save"]</button>
        </div>
    </div>
</form>