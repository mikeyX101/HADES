        <div class="col-sm-3 col-lg-3 offset-lg-2"><label>@Localizer["LogDeleteFrequency"]</label></div>
        <div class="col-sm-9 col-lg-5">
            <input type="text" asp-for="@Model.LogDeleteFrequency" class="form-control" />
