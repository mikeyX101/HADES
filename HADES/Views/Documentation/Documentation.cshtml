            <li>@Localizer["doc_notexp06"] <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/noteexp/image2.png' alt='image4'>"></i></li>
            <li>@Localizer["doc_notexp07"] <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/noteexp/image8.png' alt='image5'>"></i></li>
            <li>@Localizer["doc_notexp08"] <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/noteexp/image5.png' alt='image6'>"></i></li>
            <li>@Localizer["doc_notexp09"] <a href="https://www.vishnivetsky.ru/notices%20articles%20reviews/on-line%20oid%20generator%20for%20active%20directory%20schema.html">@Localizer["link_generator"]</a> <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/noteexp/image10.png' alt='image7'>"></i></li>
            <li>@Localizer["doc_notexp010"] <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/noteexp/image7.png' alt='image8'>"></i></li>
