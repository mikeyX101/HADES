        </ol>
    </div>

    <div id="ServicesSyncSection">
        <h3>@Localizer["SyncTitle"]</h3>
        <p>@Localizer["SyncINFO"]</p>
    </div>

    <div id="ServicesMailSection">
        <h3>@Localizer["MailTitle"]</h3>
        <p>@Localizer["MailINFO"]</p>
        <p>@Localizer["MailINFO2"]</p>
    </div>

    <div id="LogsSection">
        <h3>@Localizer["doc_logsTitle"]</h3>
        <p>@Localizer["doc_logs01"] <i class="fa fa-info-circle fa-fw mr-3" data-toggle="tooltip" data-html="true" data-placement="bottom" title="<img src='/img/doc/logsimg/image1.png' alt='image1'>"></i></p>
