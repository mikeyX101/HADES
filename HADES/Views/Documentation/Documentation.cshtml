

@{
    IUser currentUser = HADES.Util.ConnexionUtil.CurrentUser(Context.User);
}

@section scriptsPreBootStrap
{
    <link rel="stylesheet" href="~/css/@currentUser.GetUserConfig().ThemeFile/jquery-ui.min.css">
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
}

<style>
    .important {
        background-color: red;
    }

    table, table th, table td {
        border: 1px solid black;
        padding: 5px;
    }

    /**Make ToolTip bigger for IMG to fit in the Documentation**/
    .tooltip-inner {
        max-width: 1000px !important;
    }
</style>

<div class="bg-primary text-white text-center documentation">
    <h1 class="m-3 p-3"><i class="fa fa-info-circle fa-fw mr-3"></i>@Localizer["Documentation"]</h1>
</div>
<div class="docPane">
