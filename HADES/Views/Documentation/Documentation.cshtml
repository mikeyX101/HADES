        <h3>@Localizer["roleTitle"]</h3>
        <p>@Localizer["doc_roleText"]</p>
    </div>

    <div id="oudeleteSection">
        <h3>@Localizer["DeleteOU"]</h3>
        <p>@Localizer["DeleteOUINFO"]</p>
    </div>

