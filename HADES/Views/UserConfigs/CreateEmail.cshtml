@model HADES.Models.Email

@{
    ViewData["Title"] = "View";
}

<br />
<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExpirationDate" /> @Html.DisplayNameFor(model => model.ExpirationDate)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GroupCreate" /> @Html.DisplayNameFor(model => model.GroupCreate)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GroupDelete" /> @Html.DisplayNameFor(model => model.GroupDelete)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MemberAdd" /> @Html.DisplayNameFor(model => model.MemberAdd)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MemberRemoval" /> @Html.DisplayNameFor(model => model.MemberRemoval)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="@Strings.Save" class="btn btn-primary" />
                <button asp-action="UserConfig"class="btn btn-secondary">@Strings.Back</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
